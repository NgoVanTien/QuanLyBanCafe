<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag "img/user2-160x160.jpg", class: "img-circle", alt: "User Image"%>
      </div>
      <div class="pull-left info">
        <p>Admin AlibabaCafe</p>
        <a href="#"><i class="fa fa-circle text-success"></i> Đang hoạt động</a>
      </div>
    </div>
    <!-- search form -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search...">
            <span class="input-group-btn">
              <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
              </button>
            </span>
      </div>
    </form>
    <!-- /.search form -->
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
      <li class="active treeview">
        <%= link_to admin_root_path, data: {turbolinks: false} do %>
          <i class="fa fa-dashboard"></i> <span>Trang Chính</span>
          <span class="pull-right-container">
            <i class="label pull-right bg-green"></i>
          </span>
        <% end %>
      </li>

      <li>
        <%= link_to admin_products_path, data: {turbolinks: false} do %>
          <i class="fa fa-files-o"></i> <span>Sản Phẩm</span>
          <span class="pull-right-container">
            <small class="label pull-right bg-green">new</small>
          </span>
        <% end %>
      </li>

      <li>
        <%= link_to admin_tables_path, data: {turbolinks: false} do %>
          <i class="fa fa-th"></i> <span>Bàn</span>
          <span class="pull-right-container">
            <small class="label pull-right bg-green">new</small>
          </span>
        <% end %>
      </li>

      <li>
        <%= link_to admin_locations_path, data: {turbolinks: false} do %>
          <i class="fa fa-object-group"></i> <span>Vị Trí</span>
          <span class="pull-right-container">
            <small class="label pull-right bg-green">new</small>
          </span>
        <% end %>
      </li>

      <li><a href="#"><i class="fa fa-book"></i> <span>Công Thức Pha Chế</span></a></li>

      <li class="treeview menu-open">
        <a href="#">
          <i class="fa fa-table"></i> <span>Báo Cáo Thống Kê</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu" style="display: block;">
          <li>
            <%= link_to admin_reports_path, data: {turbolinks: false} do %>
              <i class="fa fa-circle-o"></i> <span>Ngày</span>
            <% end %>
          </li>
          <li>
            <%= link_to admin_week_reports_path, data: {turbolinks: false} do %>
              <i class="fa fa-circle-o"></i> <span>Tuần</span>
            <% end %>
          </li>
          <li>
            <%= link_to admin_month_reports_path, data: {turbolinks: false} do %>
              <i class="fa fa-circle-o"></i> <span>Tháng</span>
            <% end %>
          </li>
          <li>
            <%= link_to admin_year_reports_path, data: {turbolinks: false} do %>
              <i class="fa fa-circle-o"></i> <span>Năm</span>
            <% end %>
          </li>
        </ul>
      </li>

      <li class="header">NHÂN VIÊN</li>
      <li><a href="#"><i class="fa fa-circle-o text-red"></i> <span>Nhân Viên 1</span></a></li>
      <li><a href="#"><i class="fa fa-circle-o text-yellow"></i> <span>Nhân Viên 2</span></a></li>
      <li><a href="#"><i class="fa fa-circle-o text-aqua"></i> <span>Nhân Viên 3</span></a></li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>
