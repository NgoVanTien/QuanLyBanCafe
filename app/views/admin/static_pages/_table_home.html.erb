<% if table_home.orders.present? %>
  <% if table_home.orders.where(order_status: 1)&.first&.order_status == 1 %>
    <div class="table-cafe-on">
      <%= link_to "javascript:void(0)", data: {turbolinks: false, tableid: table_home.id}, class: "table-order-id load-alert-slow" do %>
        <%= image_tag "icon/table_on.png", class: "online", alt: "User Image", height: "100px" %>
        <h4><%= table_home.name %></h4>
      <% end %>
    </div>
  <% else %>
    <div class="table-cafe-off">
      <%= link_to "javascript:void(0)", data: {turbolinks: false, tableid: table_home.id}, class: "table-order-id load-alert-slow" do %>
        <%= image_tag "icon/table_off.svg", class: "online", alt: "User Image", height: "100px" %>
        <h4><%= table_home.name %></h4>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="table-cafe-off">
    <%= link_to "javascript:void(0)", data: {turbolinks: false, tableid: table_home.id}, class: "table-order-id load-alert-slow" do %>
    <%= image_tag "icon/table_off.svg", class: "online", alt: "User Image", height: "100px" %>
    <h4><%= table_home.name %></h4>
    <% end %>
  </div>
<% end %>
